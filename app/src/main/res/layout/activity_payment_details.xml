<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".PaymentDetails">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="PaymentID"
        android:gravity="center"
        android:padding="5dp"
        android:id="@+id/payID"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="Rs. 4000"
        android:padding="5dp"
        android:gravity="center"
        android:textSize="18dp"
        android:layout_below="@+id/payID"
        android:id="@+id/payAmount"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#0D8811"
        android:text="Payment Done"
        android:padding="5dp"
        android:gravity="center"
        android:textSize="18dp"
        android:layout_below="@+id/payAmount"
        android:id="@+id/payStatus"
        />




</RelativeLayout>